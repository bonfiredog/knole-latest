            <string>//If we are hovering over the Listener, first of all raise it to its larger size, then allow for hovering.

if mouse_x &gt; (oListener.x - (oListener.sprite_width / 2)) 
and mouse_x &lt; (oListener.x + (oListener.sprite_width / 2)) 
and mouse_y &gt; (oListener.y - (oListener.sprite_height / 2))
and mouse_y &lt; (oListener.y + (oListener.sprite_height / 2))
and Selected = false
{
Hovering = true
if image_xscale &lt; HoverWidthThreshold {
image_xscale = image_xscale + HoverGrowthRate
}
if image_yscale &lt; HoverHeightThreshold {
image_yscale = image_yscale + HoverGrowthRate
}
if image_xscale &gt;= HoverWidthThreshold and image_yscale &gt;= HoverHeightThreshold {
Selectable = true
}
}

else
{
if Hovering = true and Selected = false {
if image_xscale &gt; OriginalWidth {
image_xscale = image_xscale - HoverGrowthRate
}
if image_yscale &gt; OriginalHeight {
image_yscale = image_yscale - HoverGrowthRate
}
if image_xscale &lt;= OriginalWidth and image_yscale &lt;= OriginalHeight {
Hovering = false
Selectable = false
}
}
}

//If hovering over the listener, allow it to be selected.
if Selectable = true {
if mouse_check_button_pressed(mb_left) {
Selectable = false
Selected = true
}
}

if Selected = true {
//Show an indication to type if nothing has been typed yet.
if string_length(keyboard_string) &gt; 8
    {
    keyboard_string = string_copy(keyboard_string, 1, 8);
    }
CurrentTextBoxContents = keyboard_string
}
if keyboard_check_pressed(vk_enter) {
SubmittedPhrase = CurrentTextBoxContents
keyboard_string = ""
CurrentTextBoxContents = ""
HeardSomething = true
Selected = false
}





</string>
